{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/cli/**/*.ts",
    "src/filterSectionsByLabels.ts",
    "src/filterViewContent.ts",
    "src/fetchTemplateMetadata.ts",
    "src/parseAsciiDocSections.ts",
    "src/model/**/*.ts"
  ]
}
